<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textResult"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/text_layout_width"
        android:layout_marginTop="@dimen/text_top_margin"
        android:text="@string/result"
        android:textAlignment="viewEnd"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/button8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:theme="@style/Text_view_style"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/text_layout_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_top_margin"
        android:text="@string/input"
        android:textAlignment="viewEnd"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/Text_view_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_button_to_text"
        android:text="@string/_7"
        android:theme="@style/Button_Default_style"
        app:cornerRadius="@dimen/button_corner_radius"
        app:layout_constraintBottom_toTopOf="@id/button4"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/textResult"
        app:layout_constraintVertical_bias="0.3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_8"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/textResult"
        app:layout_constraintBottom_toTopOf="@id/button5"
        android:layout_marginTop="@dimen/top_button_to_text"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_9"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/textResult"
        app:layout_constraintBottom_toTopOf="@id/button6"
        app:layout_constraintEnd_toStartOf="@id/button_clear"
        android:layout_marginTop="@dimen/top_button_to_text"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_4"
        app:layout_constraintEnd_toStartOf="@id/button5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintBottom_toTopOf="@id/button1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_5"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintEnd_toStartOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintBottom_toTopOf="@id/button2"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_6"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintBottom_toTopOf="@id/button3"
        app:layout_constraintEnd_toStartOf="@id/button_plus"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintBottom_toTopOf="@id/button0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_2"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintEnd_toStartOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintBottom_toTopOf="@id/button0"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_3"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintBottom_toTopOf="@id/button_point"
        app:layout_constraintEnd_toStartOf="@id/button_minus"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_0"
        app:layout_constraintEnd_toStartOf="@id/button_point"
        app:layout_constraintStart_toStartOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/point"
        app:layout_constraintEnd_toStartOf="@id/button_equals"
        app:layout_constraintStart_toStartOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/c"
        android:backgroundTint="@color/night_mode_dark_red"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toBottomOf="@id/textResult"
        app:layout_constraintStart_toEndOf="@id/button9"
        app:layout_constraintBottom_toTopOf="@id/button_multiply"
        app:layout_constraintEnd_toEndOf="@id/button_multiply"
        android:layout_marginTop="@dimen/top_button_to_text"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/night_mode_green"
        android:text="@string/plus"
        android:textColor="@color/night_mode_purple"
        android:theme="@style/Button_Default_style"
        app:cornerRadius="@dimen/button_corner_radius"
        app:layout_constraintBottom_toTopOf="@id/button_minus"
        app:layout_constraintEnd_toStartOf="@id/button_multiply"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/button_clear"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:backgroundTint="@color/night_mode_green"
        android:textColor="@color/night_mode_purple"
        app:layout_constraintTop_toBottomOf="@id/button_plus"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintBottom_toTopOf="@id/button_equals"
        app:layout_constraintEnd_toStartOf="@id/button_divide"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/night_mode_green"
        android:textColor="@color/night_mode_purple"
        android:text="@string/multiply"
        app:layout_constraintBottom_toTopOf="@id/button_divide"
        app:layout_constraintStart_toEndOf="@id/button_plus"
        app:layout_constraintTop_toBottomOf="@id/button_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/night_mode_green"
        android:textColor="@color/night_mode_purple"
        android:text="@string/divide"
        app:layout_constraintStart_toEndOf="@id/button_minus"
        app:layout_constraintTop_toBottomOf="@id/button_multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_equals"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_equals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/equals"
        android:backgroundTint="@color/night_mode_blue"
        app:layout_constraintTop_toBottomOf="@id/button_divide"
        app:layout_constraintStart_toEndOf="@id/button_point"
        app:layout_constraintEnd_toEndOf="@id/button_divide"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:cornerRadius="@dimen/button_corner_radius"
        android:theme="@style/Button_Default_style"
        />

</androidx.constraintlayout.widget.ConstraintLayout>